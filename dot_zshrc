# Path
. $HOME/.asdf/asdf.sh

# local path
if [ -f "$HOME/.dotfiles/private_dot_config/local_zsh_path.sh" ]; then
    . "$HOME/.dotfiles/private_dot_config/local_zsh_path.sh"
fi

export ZSH="$HOME/.oh-my-zsh"

# ---------------------------------------------------------------------------

# Alias
ZSH_THEME="simple"

alias vim=nvim
function ls() {
  eza "$@"
}
function cd_ls() {
  cd "$@" && ls -al
}
alias cd='cd_ls'

# ---------------------------------------------------------------------------

plugins=(
	git
	zsh-syntax-highlighting
	zsh-autosuggestions
	autojump
)

source $ZSH/oh-my-zsh.sh  # 마지막에 위치해야 함
